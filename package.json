{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Clone do tabnews.com.br para o curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && next dev",
    "lint:check": "prettier --check .",
    "lint:write": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "docker:up": "docker compose --file ./infra/compose.yaml up --detach",
    "docker:down": "docker compose --file ./infra/compose.yaml down",
    "docker:stop": "docker compose --file ./infra/compose.yaml stop",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.4",
    "next": "^14.2.5",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.3.3"
  }
}
